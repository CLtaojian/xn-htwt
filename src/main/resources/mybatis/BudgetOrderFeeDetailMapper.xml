<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdkj.loan.dao.IBudgetOrderFeeDetailDAO">
	<resultMap id="budgetOrderFeeDetail_DB_Result" type="budgetOrderFeeDetail">
		<result column="code" property="code" />
		<result column="remit_type" property="remitType" />
		<result column="remit_project" property="remitProject" />
		<result column="amount" property="amount" />
		<result column="plat_bankcard" property="platBankcard" />
		
		<result column="remit_user" property="remitUser" />
		<result column="reach_datetime" property="reachDatetime" />	
		<result column="remark" property="remark" />
		<result column="fee_code" property="feeCode" />
		<result column="updater" property="updater" />
		
		<result column="update_datetime" property="updateDatetime" />
		<result column="status" property="status" />	
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="feeCode != null and feeCode != '' ">
				AND t.fee_code = #{feeCode}
			</if>
			<if test="status != null and status != '' ">
				AND t.status = #{status}
			</if>
		</trim>
	</sql>
	<select id="select_budgetOrderFeeDetail" parameterType="budgetOrderFeeDetail" resultMap="budgetOrderFeeDetail_DB_Result">
		SELECT
		t.code
		,t.remit_type
		,t.remit_project
		,t.amount
		,t.plat_bankcard
		
		,t.remit_user
		,t.reach_datetime
		,t.remark
		,t.fee_code
		,t.updater
		
		,t.update_datetime
		,t.status
		
		FROM
		tdq_budget_order_fee_detail t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_budgetOrderFeeDetail_count" parameterType="budgetOrderFeeDetail"
		resultType="java.lang.Long">
		SELECT count(1) FROM tdq_budget_order_fee_detail t
		<include refid="where_condition" />
	</select>

	<insert id="insert_budgetOrderFeeDetail" parameterType="budgetOrderFeeDetail">
		INSERT INTO
		tdq_budget_order_fee_detail(
		code
		,remit_type
		,remit_project
		,amount
		,plat_bankcard
		
		,remit_user
		,reach_datetime
		,remark
		,fee_code
		,updater
		
		,update_datetime
		,status
		)
		VALUES(
		#{code}
		,#{remitType}
		,#{remitProject}
		,#{amount}
		,#{platBankcard}
		
		,#{remitUser}
		,#{reachDatetime}
		,#{remark}
		,#{feeCode}
		,#{updater}
		
		,#{updateDatetime}
		,#{status}
		)
	</insert>
	
	
	<select id="select_budgetOrderFeeDetailByStatus" parameterType="budgetOrderFeeDetail" resultMap="budgetOrderFeeDetail_DB_Result">
		SELECT
		t.code
		,t.remit_type
		,t.remit_project
		,t.amount
		,t.plat_bankcard
		
		,t.remit_user
		,t.reach_datetime
		,t.remark
		,t.fee_code
		,t.updater
		
		,t.update_datetime
		,t.status
		
		FROM
		tdq_budget_order_fee_detail t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>
	<delete id="delete_budgetOrderFeeDetail">
		DELETE from tdq_budget_order_fee_detail
		WHERE code = #{code}
	</delete>
</mapper>