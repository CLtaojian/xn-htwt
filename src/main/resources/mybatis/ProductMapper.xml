<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdkj.loan.dao.IProductDAO">
	<resultMap id="product_DB_Result" type="product">
		<result column="code" property="code" />
		<result column="category" property="category" />
		<result column="type" property="type" />
		<result column="name" property="name" />
		<result column="slogan" property="slogan" />
		<result column="adv_pic" property="advPic" />
		<result column="sale_status" property="saleStatus" />
		<result column="pic" property="pic" />
		<result column="description" property="description" />
		<result column="original_price" property="originalPrice" />
		<result column="price" property="price" />
		<result column="credit_score" property="creditScore" />
		<result column="location" property="location" />
		<result column="order_no" property="orderNo" />
		<result column="status" property="status" />
	    <result column="updater" property="updater" />
		<result column="update_datetime" property="updateDatetime" />
		<result column="remark" property="remark" />
		<result column="bought_count" property="boughtCount" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="code != null and code != '' ">
				AND t.code = #{code}
			</if>
			<if test="category != null and category != '' ">
				<choose>
					 <when test='category == "NJ01"'>
					  	AND t.category not in ('J01')
					 </when>
					 <otherwise>
						AND t.category = #{category}
					 </otherwise>
				</choose>
			</if>
			<if test="type != null and type != '' ">
				AND t.type = #{type}
			</if>
			<if test="name != null and name != '' ">
				AND t.name like "%"#{name}"%"
			</if>
			<choose>
				 <when test="status == '13'">
				  	AND (t.status = 1 or t.status = 3)
				 </when>
				 <when test="status == 'normal'">
				  	AND (t.status not in (9))
				 </when>
				 <when test="status != null and status != '' ">
				  	AND t.status = #{status}
				 </when>
				 <otherwise>
				  	AND 1 = 1
				 </otherwise>
			</choose>
			<if test="location != null and location != '' ">
				AND t.location like "%"#{location}"%"
			</if>
			<if test="updater != null and updater != '' ">
				AND t.updater = #{updater}
			</if>
		</trim>
	</sql>
	<select id="select_product" parameterType="product" resultMap="product_DB_Result">
		SELECT
		t.code
		,t.category
		,t.type
		,t.name
		,t.slogan
		
		,t.adv_pic
		,t.sale_status
		,t.pic
		,t.description
		,t.original_price
		
		,t.price
		,t.credit_score
		,t.location
		,t.order_no
		,t.status
		
		,t.updater
		,t.update_datetime
		,t.remark
		,t.bought_count
		FROM
		tmall_product t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_product_count" parameterType="product"
		resultType="java.lang.Long">
		SELECT count(1) FROM tmall_product t
		<include refid="where_condition" />
	</select>

	<insert id="insert_product" parameterType="product">
		INSERT INTO
		tmall_product(
		code
		,category
		,type
		,name
		,slogan
		
		,adv_pic
		,sale_status
		,pic
		,description
		,original_price
		
		,price
		,credit_score
		,status
		,updater
		,update_datetime
		
		,remark
		,bought_count
		)
		VALUES(
		#{code}
		,#{category}
		,#{type}
		,#{name}
		,#{slogan}
		
		,#{advPic}
		,#{saleStatus}
		,#{pic}
		,#{description}
		,#{originalPrice}
		
		,#{price}
		,#{creditScore}
		,#{status}
		,#{updater}
		,#{updateDatetime}
		
		,#{remark}
		,#{boughtCount}
		)
	</insert>
	
	<update id="update_product" parameterType="product">
		UPDATE tmall_product
		SET
		category = #{category}
		,type = #{type}
		,name = #{name}
		,slogan = #{slogan}
		,adv_pic = #{advPic}
		
		,sale_status = #{saleStatus}
		,pic = #{pic}
		,description = #{description}
		,original_price = #{originalPrice}
		,price = #{price}
		
		,credit_score = #{creditScore}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>
	
	<update id="update_productStatus" parameterType="product">
		UPDATE tmall_product
		SET
		status = #{status}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>
	
	<update id="update_putOn" parameterType="product">
		UPDATE tmall_product
		SET
		location = #{location}
		,order_no = #{orderNo}
		,status = #{status}
		,updater = #{updater}
		,update_datetime = #{updateDatetime}
		,remark = #{remark}
		WHERE code = #{code}
	</update>
	
	<update id="update_boughtCount" parameterType="product">
		UPDATE tmall_product
		SET
		bought_count = bought_count + ${boughtCount}
		WHERE code = #{code}
	</update>

	<delete id="delete_product" parameterType="product">
		DELETE FROM
		tmall_product
		WHERE
		code = #{code}
	</delete>
</mapper>
